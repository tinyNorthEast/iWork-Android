<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_light_gray_sss"
    tools:context="com.iwork.ui.activity.myself.SetUserInfoActivity">

    <com.iwork.ui.view.TitleBar
        android:id="@+id/setuser_titlebar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setuser_titlebar"
        android:layout_marginTop="40dp"
        android:orientation="vertical">


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_line_height"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/set_head_icon_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="头      像"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/set_head_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/head_icon" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_line_height"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/myself_setmyemail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/myself_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="邮      箱"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/myself_setmyemail_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="请输入您要更改的邮箱"
                android:src="@drawable/common_right_arrow"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_line_height"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/myself_setmyename"
            android:layout_width="match_parent"
            android:layout_height="@dimen/myself_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="英 文 名"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/myself_setmyename_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="请输入您要更改英文名"

                android:src="@drawable/common_right_arrow"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_line_height"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/myself_setmyexpersence"
            android:layout_width="match_parent"
            android:layout_height="@dimen/myself_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/myself_setmyexpersence_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="工作年限"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/myself_setmyexpersence_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/myself_setmyexpersence_t"
                android:text="1"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/common_right_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_line_height"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/myself_setmycompany"
            android:layout_width="match_parent"
            android:layout_height="@dimen/myself_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="公司名称"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/myself_setmycompany_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="请输入您要更改的公司名称"
                android:src="@drawable/common_right_arrow"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_line_height"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/myself_setmysignature"
            android:layout_width="match_parent"
            android:layout_height="@dimen/myself_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="个人签名"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/myself_setmysignature_ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:hint="本人很懒，没有签名"
                android:src="@drawable/common_right_arrow"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_line_height"
            android:layout_marginTop="50dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:id="@+id/myself_setmypassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/myself_layout_height"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="修改密码"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/common_right_arrow" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
