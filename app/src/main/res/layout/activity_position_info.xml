<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.iwork.ui.activity.regist.PositionInfoActivity">

    <com.iwork.ui.view.TitleBar
        android:id="@+id/position_titlebar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <LinearLayout
        android:id="@+id/position_layout_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/position_titlebar"
        android:layout_marginLeft="@dimen/common_login_layout_marginleft"
        android:layout_marginRight="@dimen/common_login_layout_marginright"
        android:layout_marginTop="@dimen/common_login_layout_margintop"
        android:background="@drawable/common_bg_normal"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/position_pt_rl"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/position_iv_phone_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/es_login_phone" />

            <TextView
                android:id="@+id/position_ed_pt_input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/position_iv_phone_icon"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="职位信息"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray"
                android:textSize="@dimen/font_size_medium" />

            <ImageView
                android:id="@+id/position_img_phone_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/common_delete_selector"
                android:visibility="gone" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_centerInParent="true"
            android:src="@color/text_color_ss_gray" />

        <RelativeLayout
            android:id="@+id/position_layout_cm_input"
            android:layout_width="fill_parent"
            android:layout_height="47dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/position_iv_pwd_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/es_login_password" />

            <EditText
                android:id="@+id/position_cm_input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/position_iv_pwd_icon"
                android:background="@null"
                android:hint="公司信息"
                android:inputType="text"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray"
                android:textSize="@dimen/font_size_medium" />

            <ImageView
                android:id="@+id/position_img_pwd_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/common_delete_selector"
                android:visibility="gone" />


        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:src="@color/text_color_ss_gray" />

        <RelativeLayout
            android:id="@+id/position_layout_exp_input"
            android:layout_width="fill_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/position_iv_exp_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/es_login_password" />

            <TextView
                android:id="@+id/position_exp_input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/position_iv_exp_icon"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="从业经验"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray"
                android:textSize="@dimen/font_size_medium" />

            <ImageView
                android:id="@+id/position_img_exp_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/common_delete_selector"
                android:visibility="gone" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/position_iv_exp_line"
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:src="@color/text_color_ss_gray" />

        <RelativeLayout
            android:id="@+id/registe_rl_user_invate"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="15dp"
            >

            <ImageView
                android:id="@+id/registe_iv_user_invate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:src="@drawable/es_login_password" />

            <EditText
                android:id="@+id/registe_ed_user_invate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/registe_iv_user_invate"
                android:background="@null"
                android:hint="请输入邀请码"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_color_dark_gray"
                android:textColorHint="@color/text_color_s_gray"
                android:textSize="@dimen/font_size_medium" />

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/position_btn_submit"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_below="@id/position_layout_input"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_login_bt_selector"
        android:text="@string/next"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_color_white" />

</RelativeLayout>
