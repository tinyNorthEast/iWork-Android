<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iwork.ui.activity.myself.InvateCodeActivity">

    <com.iwork.ui.view.TitleBar
        android:id="@+id/invatecode_titlebar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <TextView
        android:id="@+id/invatecode_des"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invatecode_titlebar"
        android:layout_centerHorizontal="true"
        android:text="邀请码的说明"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/invatecode_des"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/invatecode_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/color_bts_bottom_bg"
            tools:text="asdlkfjsalkdjfxclkjvlad" />

        <TextView
            android:id="@+id/invatecode_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:textColor="@color/color_bts_bottom_bg"
            tools:text="asdlkfjsalkdjfxclkjvlad" />
    </LinearLayout>
</RelativeLayout>
