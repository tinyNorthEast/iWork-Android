<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menu_bg_half_transparent"
    android:padding="@dimen/bottom_list_menu_padding">
    <TextView 
        android:id="@+id/cancel_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_list_menu_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/cancel"
        android:background="@drawable/round_edittext"/>
    <ListView 
        android:id="@+id/menu_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cancel_text"
        android:layout_marginBottom="@dimen/bottom_list_menu_margin_cancel"
        android:paddingTop="@dimen/bottom_list_menu_padding"
        android:paddingBottom="@dimen/bottom_list_menu_padding"
        android:divider="@color/common_list_divider"
        android:dividerHeight="@dimen/common_list_divider_height"
        android:cacheColorHint="#000000"
        android:background="@drawable/round_edittext"
        />
</RelativeLayout>
