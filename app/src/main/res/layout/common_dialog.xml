<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:layout_width="@dimen/common_dialog_root_layout_width"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/common_dialog_bg">

        <TextView
            android:id="@+id/commonDialog_title_txt_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_dialog_title_txtview_single_margin_bottom"
            android:layout_marginTop="@dimen/common_dialog_title_txtview_single_margin_top"
            android:singleLine="true"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="@dimen/font_size_xx_large"
            android:visibility="visible"
            tools:text="您的订单目前没人接单" />

        <TextView
            android:id="@+id/commonDialog_title_txt_multi"
            android:layout_width="@dimen/common_dialog_title_txtview_multi_width"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/common_dialog_title_txtview_multi_margin_bottom"
            android:layout_marginTop="@dimen/common_dialog_title_txtview_multi_margin_top"
            android:textColor="@color/text_color_dark_gray"
            android:textSize="@dimen/font_size_xx_large"
            android:visibility="gone"
            tools:text="请检查网络设置请检查网络设置请检查网络设置" />

        <EditText
            android:id="@+id/commonDialog_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commonDialog_title_txt_single"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:textColor="@color/text_color_dark_gray"
            android:hint="请输入您的邮箱" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_dialog_btn_height"
            android:layout_below="@+id/commonDialog_ed"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="@dimen/common_dialog_btn_layout_margin_left"
            android:layout_marginTop="14dp"
            android:layout_marginRight="@dimen/common_dialog_btn_layout_margin_left"
            android:orientation="horizontal">

            <Button
                android:id="@+id/commonDialog_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/common_dialog_bg"
                android:text="@string/cancel"
                android:textColor="@color/text_color_dark_gray"
                android:textSize="@dimen/font_size_xx_large"
                android:visibility="visible"
                tools:text="取消订单" />

            <View
                android:id="@+id/commonDialog_view"
                android:layout_width="@dimen/common_dialog_btn_margin_left"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:visibility="visible" />

            <Button
                android:id="@+id/commonDialog_btn_submit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/common_login_bt_selector"
                android:text="@string/confirm"
                android:textColor="@color/text_color_white"
                android:textSize="@dimen/font_size_xx_large"
                android:visibility="visible"
                tools:text="重新叫车" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>

