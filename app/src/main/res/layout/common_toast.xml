<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layoutRoot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_toast_bg"
        android:minHeight="@dimen/common_toast_root_layout_height">


        <ImageView
            android:id="@+id/imgViewIcon"
            android:layout_width="@dimen/common_toast_icon_img_wdith"
            android:layout_height="@dimen/common_toast_icon_img_height"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/common_toast_icon_img_margin_top"
            android:background="@drawable/common_toast_icon_info" />

        <TextView
            android:id="@+id/txtViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgViewIcon"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/common_toast_content_textview_margin_60"
            android:gravity="center_horizontal"
            android:maxEms="12"
            android:minEms="7"
            android:minLines="1"
            android:paddingBottom="12dp"
            tools:text="请填写正确地说的和司机和"
            android:textColor="@color/text_color_ss_gray"
            android:textSize="@dimen/font_size_medium" />
    </RelativeLayout>
</RelativeLayout>