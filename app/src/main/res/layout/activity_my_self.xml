<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context="com.iwork.ui.activity.MySelfActivity">

    <com.iwork.ui.view.TitleBar
        android:id="@+id/myself_titlebar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <ImageView
        android:id="@+id/myself_iv_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/myself_titlebar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/menu_head" />

    <TextView
        android:id="@+id/myself_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/myself_iv_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_color_dark_gray"
        android:textSize="18sp"
        tools:text="姓名" />

    <LinearLayout
        android:id="@+id/myself_myattention"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/myself_tv_name"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="我的关注"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/myself_setmyinfo"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/myself_myattention"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="修改个人信息"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/myself_messages"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/myself_setmyinfo"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="消息列表"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/exit_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/myself_messages"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="退出"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>
