<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.iwork.ui.activity.MySelfActivity">

    <com.iwork.ui.view.TitleBar
        android:id="@+id/myself_titlebar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <RelativeLayout
        android:id="@+id/myself_head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/myself_head_bg">

        <ImageView
            android:id="@+id/myself_iv_user"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/myself_head" />

        <TextView
            android:id="@+id/myself_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myself_iv_user"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_white"
            android:textSize="18sp"
            tools:text="姓名" />

        <TextView
            android:id="@+id/myself_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myself_tv_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_white"
            android:textSize="18sp"
            tools:text="13028000109" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/myself_setmyinfo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myself_layout_height"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="修改个人信息"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_line_height"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/myself_myattention"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myself_layout_height"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="我的关注"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_line_height"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/myself_messages"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myself_layout_height"
        android:layout_marginTop="1dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="消息列表"
            android:textSize="18sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_line_height"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/myself_introduce"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myself_layout_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="自我介绍"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_line_height"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/myself_profession"
        android:layout_width="match_parent"
        android:layout_height="@dimen/myself_layout_height"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="擅长行业"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_line_height"
        android:background="@color/gray" />

    <Button
        android:id="@+id/myself_btn_exit"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/common_login_bt_selector"
        android:text="@string/exit_app"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_color_white" />
</LinearLayout>
