<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/picker_bar_bg">
    <View
        android:id="@+id/bar_top_line"
        android:layout_width="wrap_content"
        android:layout_height="4px"
        android:background="@color/orange" />
    <TextView
        android:id="@+id/bar_btn_cancel"
        android:textSize="46px"
        android:layout_width="263px"
        android:layout_height="120px"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/bar_top_line"
        android:text="@string/cancel_txt" />


    <TextView
        android:id="@+id/bar_btn_confirm"
        android:textSize="46px"
        android:layout_width="263px"
        android:gravity="center"
        android:layout_height="120px"
        android:layout_alignParentRight="true"
        android:layout_below="@id/bar_top_line"
        android:text="@string/confirm" />

    <TextView
        android:id="@+id/bar_title"
        android:textSize="46px"
        android:layout_width="wrap_content"
        android:layout_height="120px"
        android:layout_below="@id/bar_top_line"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text=""/>
    
    <com.iwork.ui.view.WheelView
        android:id="@+id/wheelview"
        android:layout_width="match_parent"
        android:layout_height="380px"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/bar_btn_confirm"
        wheel:lineSplitHeight="@dimen/wheel_line_split_height"
        wheel:splitLineColor="@color/split_line_gray"
        wheel:textColorFirst="@color/light_s_gray"
        wheel:textColorSecond="@color/light_gray"
        wheel:textColorThird="@color/deep_ss_gray"
        wheel:textSize="@dimen/font_size_xxx_large" />
    <!---->
</RelativeLayout>
