<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/attention_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/head_icon" />

        <RelativeLayout
            android:id="@+id/attention_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/attention_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/attention_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                tools:text="张剑涛" />

            <ImageView
                android:id="@+id/attention_time_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attention_name_tv"
                android:src="@drawable/common_time" />

            <TextView
                android:id="@+id/attention_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/attention_name_tv"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/attention_time_img"
                tools:text="46分钟前" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_line_height"
        android:background="@color/gray" />
</LinearLayout>